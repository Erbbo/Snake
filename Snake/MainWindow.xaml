<Window x:Name="Snake" x:Class="Snake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snake" Height="300" Width="300">
    <Grid x:Name="grid">

        <Border BorderBrush="Black" BorderThickness="10">
            <Canvas x:Name="canvas" Width="auto" Height="auto" SizeChanged="canvas_SizeChanged" Background="#FF0533CD" KeyDown="canvas_KeyDown"/>
        </Border>

    </Grid>
</Window>
